<% content_for :title, t("devise.titles.confirmation_instructions") %>

<div class="content-content cols">
  <div class="row">
    <div class="col-b-4a12">
      <%= content_tag(:h2, t("devise.titles.confirmation_instructions")) %>
      <%= semantic_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
          <fieldset>
            <legend class="invisible">
              <span>Confirmación de contraseña</span>
            </legend>

            <div class="inputlabel-box">
              <% if resource.errors.include?(:email) %>
                  <%= field_notice_box %>
              <% end %>
              <%= f.input :email, input_html: {autofocus: true, class: 'input-m'} %>
            </div><%#--.inputlabel-box--%>

            <%= f.actions class: 'enter' do %>
                <%= f.action :submit, label: t("devise.buttons.confirmation_instructions"), button_html: {class: "button"} %>
            <% end %>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>

<% if [:error, :notice, :recaptcha_error, :alert].any? { |err| flash[err].present? } %>
<div class="content-content cols">
  <div class="row">
    <div class="col-b-4a12">
      <% if flash[:error].present? %>
          <%= error_box "Error" do %>
              <%= flash[:error] %>
          <% end %>
      <% end %>
      <% if flash[:notice].present? %>
          <%= alert_box "Informació" do %>
              <%= flash[:notice] %>
          <% end %>
      <% end %>
      <% if flash[:recaptcha_error].present? %>
          <%= error_box "Error" do %>
              <%= flash[:recaptcha_error] %>
          <% end %>
      <% end %>

      <% if flash[:alert].present? %>
          <%= error_box "Atenció" do %>
              <%= flash[:alert] %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
